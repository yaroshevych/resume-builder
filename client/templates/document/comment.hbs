{{#if errorMessage}}
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" aria-hidden="true" {{action 'dismissErrorMessage'}}>&times;</button>
    {{errorMessage}}
</div>
{{/if}}


<div class="comment-field-wrap">
    {{view Ember.TextField valueBinding="body" class="comment-field" disabledBinding="isSaving"}}
</div>
